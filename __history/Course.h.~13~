				 CourseInstructor = Instructor;
			 }
		 }
	 }
	 Course(string courseName, string courseDepartment, Instructor* courseInstructor, string courseSemester, string startDate, string endDate, bool enabled) {
		 //Course Constructor
		 CourseID = GenerateCourseID();
	 }

