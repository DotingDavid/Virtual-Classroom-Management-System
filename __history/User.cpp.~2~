//---------------------------------------------------------------------------

#pragma hdrstop

#include <vector>

#include "User.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)

class User {
private:
        std::string LastName;
        std::string FirstName;
        std::string UserID;
        std::string Email;
        std::string Password;
        std::string PhoneNumber;
        std::string DateOfBirth;
        std::string SecurityQuestion;
        std::string SecurityAnswer;
        std::string Address;
        bool IsBlocked;
        bool IsLoggedIn;
        //std::vector<Notification> Notifications;
public:
	User(lastname, firstname, email, password, phoneNumber, dob, question, answer, address){
          LastName = lastname;
          FirstName = firstname;
          Email = email;
          Password = password;
          PhoneNumber = phoneNumber;
          DateOfBirth = dob;
          SecurityQuestion = question;
          SecurityAnswer = answer;
          Address = address;
          IsBlocked = false;
          IsLoggedIn = false;
	};

};
